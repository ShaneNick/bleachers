<row class="main">
    <div class="col-4">
        <row>
            <ul class="rooms">
            {{#each rooms as |room| }}
                <li class="room" id="{{room.id}}">
                   <a {{!-- href="/chatroom/{{room_id}}"--}}>{{room.name}}</a>
                </li>
            {{/each}}
        </ul>
        </row>
        <row>
            <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" placeholder="Room name">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Create</button>
        </row>
    </form>
    </div>
    <div class="col-8 chatbox">
        <row class="sport-title">
            <h3>{{sport.name}}</h3>
        </row>
        <row class="api-info">
            {{!-- Insert API info here --}}
        </row>
        {{body}}
    </div>
</row>
